  AssertEqual SyntaxAt(5, 3), 'nixAttributeDot'
  AssertEqual SyntaxOf('nastycomment'), 'nixComment'
  AssertEqual SyntaxOf('x'), 'nixAttribute'
  AssertEqual SyntaxOf('2'), 'nixInteger'

